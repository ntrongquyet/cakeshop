<UserControl x:Class="CakeShop.User_Control.HomeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CakeShop.User_Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" 
                   Margin="0 0 30 0">
            <TextBlock Text="Trang chủ"
                       HorizontalAlignment="Left"
                       FontFamily="/Font/#SVN-HEMI HEAD"
                       FontSize="50"/>
            <DockPanel HorizontalAlignment="Right">
                <Image Source="/Image/Icon/search.png" 
                       Width="40"/>
                <Image Source="/Image/Icon/Market.png"
                       MouseLeftButtonDown="order_button"
                       Width="40"/>
            </DockPanel>
        </DockPanel>
    </Grid>
</UserControl>
